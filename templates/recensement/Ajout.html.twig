{% extends 'base.html.twig' %}
{% block title %}Ajout d'un habitant{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1>Ajout d'un habitant</h1>

    {{ form_start(form) }}
    <div class="row">
      <div class="col-md-6">
        {{ form_row(form.Nom, {'attr': {'class': 'form-control mb-3'}}) }}
      </div>
      <div class="col-md-6">
        {{ form_row(form.Prenom, {'attr': {'class': 'form-control mb-3'}}) }}
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        {{ form_row(form.DateDeNaissance, {'attr': {'class': 'form-control mb-3'}}) }}
      </div>
      <div class="col-md-6">
        {{ form_row(form.Genre, {'attr': {'class': 'form-control mb-3'}}) }}
      </div>
    </div>

    {{ form_row(form.habitation.Adresse, {'attr': {'class': 'form-control mb-3'}}) }}

    <div class="mt-3">
      {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_end(form) }}
  </div>
{% endblock %}
